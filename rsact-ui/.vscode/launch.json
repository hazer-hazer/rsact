{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug Sandbox",
      "cwd": "${workspaceFolder}",
      "cargo": {
        "args": [
          "build",
          "--profile",
          "sandbox",
          "--example",
          "sandbox",
          "--manifest-path",
          "${workspaceFolder}/Cargo.toml",
          "--features",
          "std,simulator"
        ],
        "filter": {
          "name": "sandbox",
          "kind": "example"
        }
      }
    }
  ]
}
